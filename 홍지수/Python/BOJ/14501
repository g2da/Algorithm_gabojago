import sys

T = int(sys.stdin.readline())
day = []
money = []
dp = []
dp.append(0)
for _ in range(T):
    a, b = map(int, sys.stdin.readline().split())
    day.append(a)
    money.append(b)

for i in range(T - 1, -1, -1):
    if day[i] + i > T:
        dp[i] = dp[i + 1]
    else:
        dp[i] = max(dp[i + 1], money[i] + dp[i + day[i]])

print(dp[0])
